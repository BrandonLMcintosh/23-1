{% extends "root/base.html.j2" %}

{% block title %}
    {{user.full_name}}
{% endblock title %}

{% block body %}
    <div class="container">
        <div class="row">
            <img src="{{user.image_url}}" alt="User Profile Image" class="col-3">
            <div class="col">
                <a href="{{back}}" class="btn btn-primary">Back</a>
                <a href="/users/{{user.id}}/edit" class="btn btn-warning col">Edit</a>
                <a href="/users/{{user.id}}/delete" class="btn btn-danger col">Delete</a>
                <a href="/posts/new/{{user.id}}" class="btn btn-success">Add Post</a>
            </div>
        </div>
        <div class="row">
            <ul>
                {% for post in user.posts %}
                    <li><a href="/posts/{{post.id}}">{{post.title}}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock body %}