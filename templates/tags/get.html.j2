{% extends "root/base.html.j2" %}

{% block title %}
    {{tag.name}}
{% endblock title %}

{% block body %}
    <ul>
        {% for post in tag.posts %}
            <li><a href="/posts/{{post.id}}">{{post.title}}</a>  by {{post.user.full_name}}</li>
        {% endfor %}
    </ul>
    <a href="{{back}}" class="btn btn-primary">Back</a>
    <a href="/tags/{{tag.id}}/edit" class="btn btn-warning">Edit</a>
    <a href="/tags/{{tag.id}}/delete" class="btn btn-danger">Delete</a>
    
{% endblock body %}]