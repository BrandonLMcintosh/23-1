{% extends "root/base.html.j2" %}

{% block title %}
    {{post.title}}
{% endblock title %}

{% block body %}
    <div class="container">
        <h2>{{post.title}}</h2>
        <sub>Created {{post.created_at}} by <a href="/users/{{user_id}}">user.full_name</a></sub>
        {% if post.updated_at %}
            <sub>{{post.updated_at}}</sub>
        {% endif %}
        
        <p>{{post.content}}</p>
        <a href="/users/{{user.id}}/posts/{{post.id}}/delete">Delete</a>
        <a href="{{request.referrer}}" class="btn btn-secondary">Back</a>
    </div>
{% endblock body %}

{% block back %}{% endblock back %}