{% extends "root/base.html.j2" %}

{% block title %}
    Edit Post: {{post.titles}}
{% endblock title %}

{% block body %}
    <form action="/users/{{post.user.id}}/posts/{{post.id}}" method="POST">
        <input type="text" name="title" value="{{post.title}}">
        <input type="textarea" name="content" value="{{post.content}}">
        <input type="submit" class="btn btn-success">
        <a href="/users/{{post.user.id}}" class="btn btn-danger">Cancel</a>
    </form>
{% endblock body %}
